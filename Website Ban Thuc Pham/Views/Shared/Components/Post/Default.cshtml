@using Website_Ban_Thuc_Pham.Models;
@using Website_Ban_Thuc_Pham.Utilities;
@model IList<Post>
<!-- Blog Section Begin -->
<section class="from-blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title from-blog__title">
                    <h2>BÀI VIẾT NỔI BẬT</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                string url = Functions.TitleSlugGeneration("post", item.Title, item.PostID);
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic">
                            <img src="@item.Images" alt="">
                        </div>
                        <div class="blog__item__text">
                            <ul>
                                <li><i class="fa fa-calendar-o"></i>@item.CreatedDate.ToString("dd-MM-yyyy")</li>
                            </ul>
                            <h5><a href="/@url">@item.Title</a></h5>
                            <p>@item.Abstract</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Blog Section End -->


@model List<SanPham>
@using Website_Ban_Thuc_Pham.Models;

@{
    ViewData["Title"] = "SanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1 class="font-weight-bold ">Danh mục các sản phẩm</h1>

<p>
    <a asp-action="ThemSanPhamMoi" class="btn btn-success btn-sm"><span class="d-block text-white w-100">Thêm Mới</span></a>
</p>
<p>@TempData["Message"]</p>
<table class="table">
    <thead>
        <tr class="table-warning">
            <th>
                Tên sản phẩm
            </th>
            <th>
                Ảnh sản phẩm
            </th>
            <th>
                Giá
            </th>
            <th>
                Mô tả sản phẩm
            </th>
            <th>
                Mã loại
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-success">
            <td>
                @Html.DisplayFor(modelItem => item.TenSp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnhSp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mtsp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaLoai)
            </td>
            <td>
                    <a asp-action="SuaSanPham" asp-route-MaSp="@item.MaSp" class="btn btn-info btn-sm"><span class="d-block text-white w-25">Edit</span></a>
                    <a asp-action="XoaSanPham" asp-route-MaSp="@item.MaSp" class="btn btn-danger btn-sm bg-danger"><span class="d-block text-white w-25">Delete</span></a>
            </td>
        </tr>
}
    </tbody>
</table>

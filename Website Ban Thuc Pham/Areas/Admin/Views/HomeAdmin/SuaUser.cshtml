@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Website_Ban_Thuc_Pham.Models.User

@{
    ViewData["Title"] = "SuaUser";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h1>SuaUser</h1>

